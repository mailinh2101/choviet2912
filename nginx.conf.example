# Cấu hình Nginx cho DigitalOcean
# Đặt file này tại: /etc/nginx/sites-available/choviet2912
# Tạo symbolic link: sudo ln -s /etc/nginx/sites-available/choviet2912 /etc/nginx/sites-enabled/
# ⚠️ Thay đổi 'your-domain.com' thành domain thực tế của bạn

server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com www.your-domain.com;

    # Root directory
    root /var/www/choviet2912;
    index index.php index.html index.htm;

    # Tăng kích thước upload
    client_max_body_size 100M;

    # Logs
    access_log /var/log/nginx/choviet2912_access.log;
    error_log /var/log/nginx/choviet2912_error.log;

    # ===================================
    # WebSocket Proxy (cho Node.js server)
    # ===================================
    location /ws/ {
        proxy_pass http://127.0.0.1:3000/;
        proxy_http_version 1.1;
        
        # WebSocket headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_read_timeout 86400;
        proxy_connect_timeout 86400;
        proxy_send_timeout 86400;
    }

    # ===================================
    # PHP Application
    # ===================================
    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    # PHP-FPM processing
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        # Điều chỉnh socket PHP-FPM theo phiên bản PHP của bạn
        # Kiểm tra: ls -la /run/php/
        fastcgi_pass unix:/run/php/php8.1-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # ===================================
    # Static Files
    # ===================================
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 30d;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # ===================================
    # Security Headers
    # ===================================
    # Chặn truy cập .git, .env, và các file nhạy cảm
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Chặn truy cập các file config
    location ~ \.(json|sql|md|lock)$ {
        deny all;
    }

    # Cho phép Let's Encrypt verification
    location ~ /.well-known {
        allow all;
    }
}

# ===================================
# SSL Configuration (sau khi chạy certbot)
# ===================================
# Certbot sẽ tự động thêm config SSL vào đây
# Chạy: sudo certbot --nginx -d your-domain.com -d www.your-domain.com
